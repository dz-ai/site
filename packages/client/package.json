{
  "name": "@paderbornjs/client",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "yarn run dev",
    "dev": "npm-run-all dev:kill dev:serve",
    "dev:kill": "kill-port 3000",
    "dev:serve": "cross-env PORT=3000 BROWSER=none rescripts start",
    "precommit": "lint-staged",
    "build": "npm-run-all build:clean build:webpack",
    "build:clean": "shx rm -rf build",
    "build:webpack": "rescripts build",
    "lint": "eslint --ext .js --ext .ts --ext .tsx src",
    "test": "rescripts test",
    "test:ci": "cross-env CI=true rescripts test --coverage",
    "test:debug": "rescripts --inspect-brk test",
    "test:watch": "rescripts test"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-batch-http": "^1.2.8",
    "apollo-link-error": "^1.1.7",
    "pigeon-maps": "^0.11.11",
    "react": "^16.8.2",
    "react-apollo": "^2.5.1",
    "react-apollo-hooks": "^0.4.3",
    "react-dom": "^16.8.2",
    "react-helmet": "^5.2.0",
    "react-markdown": "^4.0.6",
    "react-pose": "^4.0.8",
    "react-scripts": "2.1.5",
    "rebass": "^3.0.1",
    "styled-components": "^4.1.3",
    "typeface-merriweather": "^0.0.72"
  },
  "devDependencies": {
    "@paderbornjs/schema": "1.0.0",
    "@rescripts/cli": "^0.0.10",
    "@rescripts/utilities": "^0.0.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.9.5",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "@types/react-helmet": "^5.0.8",
    "@types/rebass": "^3.0.3",
    "@types/styled-components": "^4.1.11",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "jest-styled-components": "^6.3.1",
    "react-testing-library": "^6.0.4",
    "webpack-bundle-analyzer": "^3.1.0"
  }
}
