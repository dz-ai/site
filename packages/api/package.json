{
  "name": "@paderbornjs/api",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "run-p watch:**",
    "watch:server": "cross-env NODE_ENV=development nodemon \"./build/api.js\" --watch \"./build\" ",
    "watch:build": "cross-env NODE_ENV=development webpack --watch",
    "start:lambda": "netlify-lambda serve src/lambda",
    "build": "run-s build:clean build:webpack",
    "build:clean": "rimraf build",
    "build:webpack": "cross-env NODE_ENV=production webpack",
    "build:lambda": "netlify-lambda build src/lambda",
    "lint": "eslint --ext .js --ext .ts src"
  },
  "dependencies": {
    "apollo-server": "^2.4.0",
    "apollo-server-express": "^2.4.0",
    "apollo-server-lambda": "^2.4.8",
    "casual": "^1.6.0",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.15.1",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@paderbornjs/schema": "1.0.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/helmet": "^0.0.42",
    "@types/node": "^11.9.5",
    "@types/node-fetch": "^2.1.6",
    "apollo-server-lambda": "^2.4.8",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "netlify-lambda": "^1.4.2",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-license-plugin": "^4.0.0-alpha.4"
  }
}
