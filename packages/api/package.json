{
  "name": "@paderbornjs/api",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "start": "yarn run dev",
    "dev": "npm-run-all --parallel dev:kill dev:clear --serial dev:serve",
    "dev:kill": "kill-port 4000",
    "dev:clear": "shx rm -rf build",
    "dev:serve": "cross-env NODE_ENV=development PORT=4000 webpack --watch",
    "precommit": "lint-staged",
    "build": "cross-env NODE_ENV=production npm-run-all build:clean build:webpack",
    "build:clean": "shx rm -rf build",
    "build:webpack": "webpack",
    "serve": "cross-env PORT=444 NODE_ENV=production node build/api.js",
    "test": "is-ci \"test:ci\" \"test:watch\"",
    "test:ci": "cross-env CI=true npm-run-all test:clear test:jest",
    "test:clear": "shx rm -rf coverage",
    "test:jest": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint --ext .js --ext .ts src"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "apollo-server": "^2.4.0",
    "apollo-server-express": "^2.4.0",
    "apollo-server-lambda": "^2.4.8",
    "casual": "^1.6.0",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.15.1",
    "jest-transform-graphql": "^2.1.0",
    "node-fetch": "^2.3.0",
    "source-map-support": "^0.5.11"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@paderbornjs/schema": "1.0.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/helmet": "^0.0.42",
    "@types/node": "^11.9.5",
    "@types/node-fetch": "^2.1.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-macros": "^2.5.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "23.6.0",
    "jest-watch-typeahead": "^0.2.1",
    "netlify-lambda": "^1.4.2",
    "nodemon": "^1.18.10",
    "nodemon-webpack-plugin": "^4.0.7",
    "prettier": "^1.16.4",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-license-plugin": "^4.0.0-alpha.4"
  }
}
