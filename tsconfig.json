{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "lib": [
      "es2022"
    ],
    "moduleDetection": "force",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
